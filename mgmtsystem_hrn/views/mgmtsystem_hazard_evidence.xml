<odoo>

    <record model="ir.ui.view" id="mgmtsystem_hazard_evidence_form_view">
        <field name="name">mgmtsystem.hazard.evidence.form (in mgmtsystem_hrn)</field>
        <field name="model">mgmtsystem.hazard.evidence</field>
        <field name="arch" type="xml">
            <form string="Evidence Images">
                <field name="sequence" invisible="1" />
                <div class="row o_evidence_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Image Name" />
                        <h2>
                            <field name="name" />
                        </h2>
                        <label for="description" string="Description" />
                        <h2>
                            <field name="description" />
                        </h2>
                    </div>
                    <div
                        class="col-md-6 col-xl-7 text-center o_evidence_image_modal_container"
                    >
                        <div class="row">
                            <div class="col">
                                <field name="image_1920" widget="image" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>
